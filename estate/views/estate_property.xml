<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_Available":1}</field>
    </record>
    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">
            <tree decoration-success="status in ('offer received','offer accepted')" decoration-bf="status=='offer accepted'" decoration-muted="status=='sold'">
                <field name="status" invisible="1"/>
                <field name="title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Availalbe from" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_form" model="ir.ui.view">
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sold" type="object" string="Sold" attrs="{'invisible': [('status', '=', 'sold')]}"/>
                    <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('status', '=', 'sold')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <field name="title" style="font-size:30pt"/>
                    <br/>
                    <field name="tag_ids" widget="many2many_tags" options="{'no_create_edit': True,'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                        </group>
                        <group>
                            <field name="date_availability" string="Availalbe From" />
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area" string="Living Area (sqm)"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area" string="Garden Area (sqm)" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" attrs="{'readonly': [('status', 'in', ('offer accepted', 'sold' , 'canceled'))]}"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id" string="Salesman"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <filter name='Available' domain="['|',('status','=','new'),('status','=','offer received')]"/>
                <filter name='Postcode' context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>